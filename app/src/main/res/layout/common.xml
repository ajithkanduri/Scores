<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BadmintionActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A vs B"
        android:id="@+id/match"
        android:layout_marginLeft="120dp"
        android:textColor="#000"
        android:textSize="25sp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/array3"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginLeft="120dp"
                android:id="@+id/singles1"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/array4"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginLeft="120dp"
                android:id="@+id/set"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="#000"
                android:id="@+id/teamA"
                android:textSize="20sp"
                android:padding="10dp"/>
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:id="@+id/scoreA"
                ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textColor="#000"
                    android:id="@+id/teamB"
                    android:textSize="20sp"
                    android:padding="10dp"/>
                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/scoreB"
                    ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:id="@+id/update"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin = "10dp"
                android:text="Delete if set is entered wrongly "
                android:id="@+id/delete"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Click Here When The Match is Completed"
                android:id="@+id/results"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>